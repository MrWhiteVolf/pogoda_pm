<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
            android:text="Odswierz"
            android:layout_width="111dp"
            android:layout_height="66dp"
            android:id="@+id/select_city2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="579dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="200dp"
            app:layout_constraintVertical_bias="0.0"
            android:id="@+id/container" android:orientation="horizontal" app:layout_constraintHorizontal_bias="1.0">

    </LinearLayout>
    <Button
            android:text="@string/today"
            android:layout_width="111dp"
            android:layout_height="66dp"
            android:id="@+id/fragment1button" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="36dp"
            app:layout_constraintHorizontal_bias="0.589"
            app:layout_constraintEnd_toStartOf="@+id/fragment2button"
            app:layout_constraintStart_toEndOf="@+id/select_city"/>
    <Button
            android:text="@string/tomorrow"
            android:layout_width="111dp"
            android:layout_height="66dp"
            android:id="@+id/fragment2button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="36dp"
    />
    <Button
            android:text="@string/select_city"
            android:layout_width="111dp"
            android:layout_height="66dp"
            android:id="@+id/select_city" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="76dp" app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>